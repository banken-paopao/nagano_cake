<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row">
    <table class="mt-3" cellpadding="10">
      <tr>
        <th>購入者</th>
        <td><%= link_to @order_detail.order.customer.full_name,admin_path %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order_detail.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order_detail.order.address_display %><br>
          <%= @order_detail.order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td>
          <%= @order_detail.order.payment_method_i18n %>
        </td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model: @order_detail.order, url: admin_order_path(@order_detail.order.id), method: :patch do |f| %>
            <%= f.select :status, options_for_select(Order.statuses_i18n.keys.map { |k| [Order.statuses_i18n[k], k]}, selected: @order_detail.order.status), {prompt: "選択してください"}, class: "prefecture-select" %>
            <%= f.submit "更新", class: "ml-3 btn btn-success" %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.with_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal %></td>
              <td>
                <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch do |f| %>
                  <%= f.select :making_status, options_for_select(OrderDetail.making_statuses_i18n.keys.map { |k| [OrderDetail.making_statuses_i18n[k], k]}, selected: order_detail.making_status), {prompt: "選択してください"}, class: "prefecture-select" %>
                  <%= f.submit "更新", class: "ml-3 btn btn-success" %>
                <% end %>
              </td>
            </tr>
            <!--商品合計金額(画面上非表示)-->
            <% @total += @total + order_detail.subtotal %>
            <!--ここまで-->
          <% end %>
        </tbody>
      </table>    
    </div>
    <div class="col-3">
      <table class="float-right">
        <tr>
          <th>商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order_detail.order.shipping_cost %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @total + @order_detail.order.shipping_cost %></td>
        </tr>
      </table>
    </div>
  </div>
</div>