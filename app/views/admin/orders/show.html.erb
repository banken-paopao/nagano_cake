<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row">
    <table class="mt-3" cellpadding="10">
      <tr>
        <th>購入者</th>
        <td><%= @order_detail.order.customer.full_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order_detail.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order_detail.order.address_display %><br>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td>
          <% if @order_detail.order.payment_method == 0 %>
            クレジットカード
          <% else %>
            銀行振込
          <% end %>
        </td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model: Order.new, url: admin_order_path(@order_detail.order), method: :patch do |f| %>
            <%= f.select :status, [["入金待ち", 0],["入金確認", 1],["製作中", 2],["発送準備中",3],["発送済み",4]] %>
            <%= f.submit "更新", class: "ml-3 btn btn-success" %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.item.price * 1.1).floor %></td>
              <td><%= order_detail.amount %></td>
              <td><%= (order_detail.item.price * 1.1).floor * order_detail.amount %></td>
              <td>
                <%= form_with model: OrderDetail.new, url: admin_order_detail_path(order_detail.id), method: :patch do |f| %>
                  <%= f.select :making_status, [["製作不可", 0],["製作待ち", 1],["製作中", 2],["製作完了",3]] %>
                  <%= f.submit "更新", class: "ml-3 btn btn-success" %>
                <% end %>
              </td>
            </tr>
            <!--商品合計金額(画面上非表示)-->
            <% @total += @total + (order_detail.item.price * 1.1).floor * order_detail.amount %>
            <!--ここまで-->
          <% end %>
        </tbody>
      </table>    
    </div>
    <div class="col-3">
      <table class="float-right">
        <tr>
          <th>商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order_detail.order.shipping_cost %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order_detail.order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
</div>