<h3>商品新規登録</h3>
<div>
  <%= form_with model: [:admin, @item] do |f| %>
  <div>
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction %>
  </div>
  <div>
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: "--選択してください--" } %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.number_field :price, placeholder: "1000" %>
  </div>

  <div>
    <%= f.label :is_active, "販売ステータス" %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "販売中", value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, "販売停止中", value: false %>
  </div>

    <%= f.submit "新規登録" %>
  <% end %>
</div>