<div class="container py-5 text-secondary">
  <div class="row">
    <div class="col-lg-3">
      <h5 class="border-bottom">商品詳細</h5>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-6 col-10 text-center mx-auto">
      <%= image_tag @item.get_image(500, 500) %>
    </div>
    <div class="col-lg-5 col-10 offset-lg-1 mx-auto mt-lg-0 mt-3">
      <table class="table text-secondary">
        <tr>
          <td style="width: 35%">商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td rowspan="2" class="align-middle"><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
        </tr>
        <tr>
          <td>販売ステータス</td>
            <% if @item.is_active %>
              <td class="text-success">
                <%= @item.sale_status %>
              </td>
            <% else %>
              <td class="text-danger">
                <%= @item.sale_status %>
              </td>
            <% end %>
          </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-block btn-template-reverse" %>
    </div>
  </div>
</div>