<div class="container py-5 text-secondary">
  <div class="row">
    <div class="col-lg-3">
      <h5 class="border-bottom">商品詳細</h5>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-6">
      <%= image_tag @item.get_image(500, 500) %>
    </div>
    <div class="col-lg-6">
      <table class="table  text-secondary">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td rowspan="2" class="align-middle"><%= ((@item.price * 1.1).floor).to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          <!--税込価格のメソッド追加-->
        </tr>
        <tr>
        </tr>
        <tr>
          <td>販売ステータス</td>
            <% if @item.is_active %>
              <td class="text-success">
                <%= @item.sale_status %>
              </td>
            <% else %>
              <td class="text-danger">
                <%= @item.sale_status %>
              </td>
            <% end %>
          </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-outline-secondary btn-block" %>
    </div>
  </div>
</div>