<div class="container py-5 text-secondary">
  <div class="row">
    <div class="col-lg-3">
      <h5 class="border-bottom">商品編集</h5>
    </div>
  </div>
  <div class="row my-5">
    <div class="col-lg-3 mx-auto">
      <%= form_with model: [:admin, @item] do |f| %>
      <div class="form-group custom-file mb-3">
        <%= f.file_field :image, accept: "image/*", class: "custom-file-input" %>
        <%= f.label :image, "商品画像を選択...", class: "custom-file-label text-secondary", data: {browse: "参照"} %>
      </div>
      <div class="form-group">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction, class: "form-control", rows: "8" %>
      </div>
      <div class="form-group">
        <%= f.label :genre_id, "ジャンル" %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, @item.genre_id), {}, class: "form-control text-secondary" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, placeholder: "1000", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :is_active, "販売ステータス" %>
        <div class="form-check">
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", value: true, class: "form-check-label" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中", value: false, class: "form-check-label" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存", class: "btn btn-outline-secondary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>