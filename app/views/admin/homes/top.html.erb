<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= link_to order_detail.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order_detail.id) %></td>
            <td><%= order_detail.order.customer.full_name %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.order.status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>