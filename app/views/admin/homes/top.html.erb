<div class="container py-5 text-secondary">
  <div class="row">
    <div class="col-lg-3">
      <h5 class="border-bottom">注文履歴一覧</h5>
    </div>
  </div>
  <div class="row  mt-5">
    <table class="table text-secondary table-hover">
      <thead class="table-secondary">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= link_to order_detail.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order_detail.id) %></td>
            <td><%= order_detail.order.customer.full_name %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.order.status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>