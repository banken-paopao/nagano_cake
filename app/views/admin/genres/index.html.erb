<h3>ジャンル一覧・追加</h3>

<%= form_with model: [:admin, @genre] do |f| %>
 <%= f.label :name, "ジャンル名" %>
 <%= f.text_field :name, placeholder: "ジャンル名" %>
 <%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>
        ジャンル
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @genres.each do |genre| %>
      <td>
        <%= genre.name %>
      </td>
      <td>
        <%= link_to "編集する", edit_admin_genre_path(genre) %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>