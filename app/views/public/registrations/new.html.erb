<div class="container">
  <div class="row">
    <div calss="col-lg-5 offset-3 ">
      <h2 class="p-2 mb-2 bg-light text-center mt-3">新規会員登録</h2>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-lg-10 mb-5">
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :"名前" %></td>
            <td>
              <%= f.label :"（姓）" %>
              <%= f.text_field :last_name, style: "width: 30%" %>
              <%= f.label :"（名）" %>
              <%= f.text_field :first_name, style: "width: 30%" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"フリガナ" %></td>
            <td>
              <%= f.label :"(セイ)" %>
              <%= f.text_field :last_name_kana, style: "width: 30%" %>
              <%= f.label :"（メイ）" %>
              <%= f.text_field :first_name_kana, style: "width: 30%" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.email_field :email, style: "width: 30%" %></td>
          </tr>
          <tr>
            <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
            <td><%= f.text_field :postal_code, style: "width: 30%" %></td>
          </tr>
          <tr>
            <td><%= f.label :"住所" %></td>
            <td><%= f.text_field :address, style: "width: 70%" %></td>
          </tr>
          <tr>
            <td><%= f.label :"電話番号（ハイフンなし）" %></td>
            <td><%= f.text_field :telephone_number, style: "width: 30%" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード（6文字以上）" %></td>
            <td> <%= f.password_field :password, autocomplete: "new-password", style: "width: 30%" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード（確認用）" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 30%" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success btn-lg w-50" %></td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-5">
      <h3 class="p-2 mb-2 bg-light text-center">既に登録済みの方</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-5 offset-2">
      <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。
    </div>
  </div>

</div>
