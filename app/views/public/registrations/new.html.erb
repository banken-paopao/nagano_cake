<div class="container">
  <div class="row">
    <div calss="col-4">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
          <div class="col-11">
        <table class="table-borderless">
          <tr>
            <td><%= f.label :"名前" %></td>
            <td>
              <%= f.label :"（姓）" %>
              <%= f.text_field :last_name %>
              <%= f.label :"（名）" %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"フリガナ" %></td>
            <td>
              <%= f.label :"(セイ)" %>
              <%= f.text_field :last_name_kana %>
              <%= f.label :"（メイ）" %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td><%= f.label :"住所" %></td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td><%= f.label :"電話番号（ハイフンなし）" %></td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード（6文字以上）" %></td>
            <td> <%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード（確認用）" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-5">
      <h3>既に登録済みの方</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-5">
      <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。
    </div>
  </div>

</div>
