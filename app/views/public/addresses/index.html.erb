<div class="container mypage">
  <div class="row">
    <div class="col-lg-5 mt-3">
      <div class="col-12 mt-5 mb-3 mx-auto"><h4 class="my-auto mypage-title">配送先登録/一覧</h4></div>
    </div>
  </div>
  <%= render "layouts/error", obj: @address %>
  <div class="row">
    <div class="col-10 mt-3 offset-1">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
       <%= render "form", text: "新規登録", f: f %>
      <% end %>
    </div>
  </div>
  <table class="table table-bordered mt-5">
    <thead class="bg-light text-center">
      <tr class="table-color text-center">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td style = "width: 20%"><%= address.postal_code %></td>
          <td style = "width: 30%"><%= address.address %></td>
          <td style = "width: 20%"><%= address.name %></td>
          <td style = "width: 20%">
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-template-reverse ml-3" %>
            <%= link_to "削除する", address_path(address), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-outline-danger btn-template ml-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row justify-content-center">
    <%= paginate @addresses %>
  </div>
</div>