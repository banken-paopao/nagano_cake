<div class="container">

  <div class="row">
    <div class="col-4 mb-5">
      <h2>配送先登録/一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-8 mb-3">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>

        <div class="field-group">
          <%= f.label :"郵便番号（ハイフンなし）", class: "col-4" %>
          <%= f.text_field :postal_code, class: "col-4" %>
        </div>

        <div class="field-group">
          <%= f.label :"住所", class: "col-4" %>
          <%= f.text_field :address, class: "col-6" %>
        </div>

        <div class="field-group">
          <%= f.label :"宛名", class: "col-4" %>
          <%= f.text_field :name, class: "col-4" %>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>