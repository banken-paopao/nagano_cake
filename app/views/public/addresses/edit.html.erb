<div class="container">

  <div class="row">
    <div class="col-4 mb-5">
      <h2>配送先編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mb-3">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>

        <div class="field-group">
          <%= f.label :"郵便番号（ハイフンなし）", class: "col-4" %>
          <%= f.text_field :postal_code, class: "col-4" %>
        </div>

        <div class="field-group">
          <%= f.label :"住所", class: "col-4" %>
          <%= f.text_field :address, class: "col-6" %>
        </div>

        <div class="field-group">
          <%= f.label :"宛名", class: "col-4" %>
          <%= f.text_field :name, class: "col-4" %>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>