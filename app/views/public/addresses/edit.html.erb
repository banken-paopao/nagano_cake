<div class="container">

  <div class="row">
    <div class="col-lg-5 mt-3">
      <h2 class="p-2 mb-2 bg-light text-center mt-3">配送先編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mt-3 offset-1">
      <%= form_with model: @address, method: :patch do |f| %>

        <div class="field-group mt-1">
          <%= f.label :"郵便番号（ハイフンなし）", class: "col-4" %>
          <%= f.text_field :postal_code, class: "col-4" %>
        </div>

        <div class="field-group mt-1">
          <%= f.label :"住所", class: "col-4" %>
          <%= f.text_field :address, class: "col-6" %>
        </div>

        <div class="field-group mt-1">
          <%= f.label :"宛名", class: "col-4" %>
          <%= f.text_field :name, class: "col-4" %>
          <%= f.submit "変更内容を保存", class: "btn btn-success offset-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>