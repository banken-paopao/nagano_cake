<div class="container mypage">

  <div class="row">
    <div class="col-lg-5 mt-3">
       <div class="col-12 mt-5 mb-3 mx-auto"><h4 class="my-auto mypage-title">配送先編集</h4></div>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mt-3 offset-1">
      <%= form_with model: @address, method: :patch do |f| %>

        <div class="field-group form-group mt-1">
          <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-4" %>
          <%= f.text_field :postal_code, autofocus: true, class: "col-4 form-control d-inline-block" %>
        </div>

        <div class="field-group form-group mt-1">
          <%= f.label :address, "住所", class: "col-4" %>
          <%= f.text_field :address, class: "col-6 form-control d-inline-block" %>
        </div>

        <div class="field-group mt-1">
          <%= f.label :name, "宛名", class: "col-4" %>
          <%= f.text_field :name, class: "col-4 form-control d-inline-block" %>
          <%= f.submit "変更内容を保存", class: "btn btn-template-reverse ml-5 my-auto" %>
        </div>
      <% end %>
    </div>
  </div>
</div>