<div class="container">
    <div class="row">
      <div class="col-3">
        <div class="mt-4">
          <%= render 'public/items/genre',genres: @genres %>
        </div>
      </div>
      <div class="col-4">
        <%= image_tag @item.get_image(400,400) %>
      </div>
      <div class="col-5">
        <div class="md-3"><%= @item.name %></div>
        <div class="md-3"><%= @item.introduction %></div>
        <div class="md-3"><%= @item.with_tax_price %></div>
        <div class="d-flex flex-row-reverse bd-highlight">
          <%= form_with model: @cart_item, url: cart_items_path do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <p class="p-2 bd-highlight">
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>