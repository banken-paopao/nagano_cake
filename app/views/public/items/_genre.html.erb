<div id="genre-table">
  <table class="table">
    <thead>
      <tr>
        <th class="text-black-50">ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <% genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, item_search_items_path(genre_id: genre.id, model: "genre"), class: "button tag light-shadow py-3",style: "width: 100%" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
