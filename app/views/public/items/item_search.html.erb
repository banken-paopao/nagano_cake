  <div class="container">
    <div class="row">
      <div class="col-2">
        <div class="mt-4">
          <%= render 'public/items/genre', genres: @genres %>
        </div>
      </div>
      <div class="col-10">
        <div class="mt-4">
          <% if @search_result.count > 0 %>
            <h5 class=" text-center mb-5">"<%= @search_name %>"の検索結果 1-<%=  @search_result.count %>件</h5>
          <% else %>
            <h5 class=" text-center mb-5">"<%= @search_name %>"の検索に一致する商品は見つかりませんでした</h5>
          <% end %>
          <%= render "public/items/index", items: @search_result %>
          <div class="row justify-content-center">
            <%= paginate @search_result %>
          </div>
        </div>
      </div>
    </div>
  </div>