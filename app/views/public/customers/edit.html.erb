<div class="container">
  <div class="row">
    <div calss="col-4">
      <h2>会員情報編集</h2>
    </div>
  </div>

<%= form_with model: @customer, url: information_customers_path do |f| %>
  <%= render "public/shared/error_messages", resource: @customer %>

  <div class="row">
    <div class="col-11">
      <table class="table-borderless">
        <tr>
          <td><%= f.label :"名前" %></td>
          <td>
            <%= f.label :"（姓）" %>
            <%= f.text_field :last_name %>
            <%= f.label :"（名）" %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :"フリガナ" %></td>
          <td>
            <%= f.label :"(セイ)" %>
            <%= f.text_field :last_name_kana %>
            <%= f.label :"（メイ）" %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.email_field :email %></td>
        </tr>
        <tr>
          <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td><%= f.label :"住所" %></td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td><%= f.label :"電話番号（ハイフンなし）" %></td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
          <td><%= link_to "退会する", unsubscribe_customers_path, class: 'btn btn-md btn-danger' %></td>
        </tr>
      </table>
    </div>
  </div>
<% end %>