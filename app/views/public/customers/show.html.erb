<div class="container">
  <div class="row">
    <div class="col-10 mt-4 mb-3 mx-5"><h4 class="my-auto">マイページ</h4></div>

<div class="col-lg-7 col-sm-12">
    <table class="table table-borderless col-7 mb-0">
      <tbody>
        <tr>
          <td class="align-middle" style="font-size: 20px"><strong>登録情報</strong></td>
          <td><%= link_to '編集する', information_edit_customers_path, class: 'btn btn-success btn-block' %></td>
        </tr>
      </tbody>
    </table>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="table-secondary" style="width:30%">氏名</td>
          <td><%= current_customer.last_name %>　<%= current_customer.first_name %></td>
        </tr>
        <tr>
          <td class="table-secondary">カナ</td>
          <td><%= current_customer.last_name_kana %>　<%= current_customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="table-secondary">郵便番号</td>
          <td><%= current_customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table-secondary">住所</td>
          <td><%= current_customer.address %></td>
        </tr>
        <tr>
          <td class="table-secondary">電話番号</td>
          <td><%= current_customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="table-secondary">メールアドレス</td>
          <td><%= current_customer.email %></td>
        </tr>
      </tbody>
    </table>
    <table class="table table-borderless col-7">
      <tbody>
        <tr>
          <td class="align-middle" style="font-size: 20px"><strong>配送先</strong></td>
          <td><%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary btn-block' %></td>
        </tr>
        <tr>
          <td class="align-middle" style="font-size: 20px"><strong>注文履歴</strong></td>
          <td><%= link_to '一覧を見る', orders_path, class: 'btn btn-primary btn-block' %></td>
        </tr>
      </tbody>
    </table>
</div>