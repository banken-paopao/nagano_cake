<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-4 mb-3 mx-5"><h4 class="my-auto">マイページ</h4></div>

<div class="col-11">
  <div class="col-7">
    <div class="d-flex align-content-center">
      <h5><strong>登録情報</strong><%= link_to '編集する', information_edit_customers_path, class: 'btn btn-md btn-success ml-5' %></h5>
    </div>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= current_customer.last_name %>　<%= current_customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= current_customer.last_name_kana %>　<%= current_customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= current_customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= current_customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= current_customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= current_customer.email %></td>
        </tr>
      </tbody>
    </table>
    <table class="table table-borderless col-7">
      <tbody>
        <tr>
          <td><strong>配送先</strong></td>
          <td><%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary' %></td>
        </tr>
        <tr>
          <td><strong>注文履歴</strong></td>
          <td><%= link_to '一覧を見る', orders_path, class: 'btn btn-primary' %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>