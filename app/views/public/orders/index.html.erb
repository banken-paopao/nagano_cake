<div class="container">
  <div class="row">
    <div class="col-10 mt-4 mb-3 mx-5"><h4 class="my-auto">注文履歴一覧</h4></div>

    <table class="table table-bordered">
      <thead>
        <tr class="table-secondary">
          <th>注文日</th>
          <th style="width: 50%">配送先</th>
          <th>注文商品</th>
          <th>支払い商品</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% current_customer.orders.reverse.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postal_code %></br>
              <%= order.address %></br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |detail| %>
                <%= detail.item.name %></br>
              <% end %>
            </td>
            <td class="align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
            <td class="align-middle"><%= order.status_i18n %></td>
            <td class="align-middle"><%= link_to '表示する' , order, class: 'btn btn-md btn-primary' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>