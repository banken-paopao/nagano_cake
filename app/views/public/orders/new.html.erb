<h4>注文情報入力</h4>

<%= form_with model: @order, url: confirm_orders_path, method: :post do |f| %>
  <div class="form_group">
    <p>支払い方法</p>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
  </div>

  <div class="form_group">
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfar] %>
  </div>

  <div class="form_group">
    <p>お届け先</p>
    <%= f.radio_button :select_address, 0, checked: true %>
    <%= f.label :select_address, "ご自身の住所" %>
    <div>
      <%= current_customer.address_display %></br>
      <%= current_customer.full_name %>
    </div>
  </div>

  <div class="form_group">
    <%= f.radio_button :select_address, 1 %>
    <%= f.label :select_address, "登録済住所から選択" %>
    <% if current_customer.addresses.size == 0 %>
      <p>登録済の住所がありません</p>
    <% else %>
      <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses,:id, :address_display)  %>
    <% end %>
  </div>

  <div class="form_group">
    <%= f.radio_button :select_address, 2 %>
    <%= f.label :select_address, "新しいお届け先" %>
    <table>
      <tbody>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="form_group">
    <%= f.submit "確認画面へ進む" %>
  </div>
<% end %>